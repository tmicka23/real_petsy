<% content_for :content do %>

<h1>Mes Animaux</h1>

<p class="text-left">
  <a href="<%= new_pet_path %>" class="btn btn-success">Ajouter un animal</a>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Sexe</th>
      <th>Age</th>
      <th>Esp√®ce</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.gender %></td>
        <td><%= pet.age %></td>
        <td><%= pet.species.name %></td>
