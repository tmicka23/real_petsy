<% content_for :content do %>

<h1>Tous les articles</h1>

<p class="text-left">
  <a href="<%= new_post_path %>" class="waves-effect waves-light btn purple accent-3"><i class="material-icons left">thumb_up</i>Ajouter un article</a>
</p>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="card grey lighten-3 hoverable col m6 bt">
        <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="<%= post.photo_url %>" style="max-width: 400px;">
        </div>
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= post.name %><i class="material-icons medium teal-text right">add_circle</i></span>
        </div>
        <div class="card-reveal grey lighten-3">
            <span class="card-title grey-text text-darken-4"><%= post.name %><i class="material-icons right">close</i></span>
            <p><%= post.content %></p>
            <a href="<%= post_path(post.id) %>" class="waves-effect waves-light btn-small light-blue">Aller Ã  l'article</a>
        </div>
      </div>
    <% end %>
  </div>

<br>

  <% end %>
