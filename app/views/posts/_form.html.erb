<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @post.photo? %>
  <p>
    <%= image_tag @post.photo_url %>
  </p>
  <% end %>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :post_name %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :post_content %>
  </div>

  <div class="field">
    <%= form.text_field :user_id, id: :post_user_id, type: 'hidden' %>
  </div>

  <div class="field">
    <%= form.label :pet_ids,'Animaux', class: 'col-md-4 control-label' %>
      <%= form.select :pet_ids, current_user.pets.pluck(:name, :id), {}, multiple: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>




<% end %>
