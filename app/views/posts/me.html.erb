
<% content_for :content do %>

<h1>Mes articles</h1>

<p class="text-left">
  <a href="<%= new_post_path %>" class="waves-effect waves-light btn teal accent-3"><i class="material-icons left">thumb_up</i>Ajouter un article</a>
</p>

	<div class="row">
		<% @posts.each do |post| %>
			<div class="col-md-4">
				<h3><%= post.name %></h3>
				<% if post.photo %>
						<img src="<%= post.photo_url(:thumb) %>">
				<% end %>
				<p><%= post.content %></p>
				<p>
					<%= link_to 'voir', post %>
					<%= link_to"modifier", edit_post_path(post) %>
					<%= link_to 'supprimer', post, method: :delete, data: { confirm: 'Are you sure?' } %>
				</p>
			</div>
		<% end %>
	</div>

<% end %>

	<%= render template: 'layouts/profile' %>
