<%=  content_for :tab, :me %>
<% content_for :content do %>

<h1>Mes articles</h1>

<p class="text-left">
  <a href="<%= new_post_path %>" class="waves-effect waves-light btn teal accent-3"><i class="material-icons left">thumb_up</i>Ajouter un article</a>
</p>

<table class="table highlight">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Photo</th>
      <th>Contenu</th>
      <th>Sur la photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><img src="<%= post.photo_url(:thumb) %>" alt=""></td>
        <td><%= post.content %></td>
        <td><% post.pets.each do |pet| %>
          <a href="<%= pet_path(pet) %>" class="badge badge-pill badge-primary"><%= pet.name %></a>
        <%end%></td>
        <td> <a href="<%= post_path(post.id) %>" class="waves-effect waves-light btn light-blue" >Voir</a> </td>
        <% if user_signed_in? && current_user.id === post.user_id %>
          <td> <a href="<%= edit_post_path(post) %>" class="waves-effect waves-light btn cyan" >Modifier</a> </td>
          <td> <a href="<%= post_path(post.id) %>" class="waves-effect waves-light btn red" data-method="delete" data-confirm="ÃŠtes vous sur de vouloir supprimer <%= post.name %>">Supprimer</a> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% end %>

